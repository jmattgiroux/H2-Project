<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/FirstFragment">

    <fragment
        android:id="@+id/FirstFragment"
        android:name="com.example.h2project.HomeScreenFragment1"
        android:label="@string/first_fragment_label"
        tools:layout="@layout/HomeScreenFragment1">

        <action
            android:id="@+id/action_FirstFragment_to_SecondFragment"
            app:destination="@id/SecondFragment" />
    </fragment>
    <fragment
        android:id="@+id/SecondFragment"
        android:name="com.example.h2project.HomeScreenFragment2"
        android:label="@string/second_fragment_label"
        tools:layout="@layout/home_screen_fragment_2">

        <action
            android:id="@+id/action_SecondFragment_to_FirstFragment"
            app:destination="@id/FirstFragment" />
    </fragment>
    <fragment
        android:id="@+id/FirstFragment"
        android:name="com.example.h2project.ScavengerHuntFragment1"
        android:label="@string/first_fragment_label"
        tools:layout="@layout/scavenger_hunt_fragment_1">

        <action
            android:id="@+id/action_FirstFragment_to_SecondFragment"
            app:destination="@id/SecondFragment" />
    </fragment>
    <fragment
        android:id="@+id/SecondFragment"
        android:name="com.example.h2project.ScavengerHuntFragment2"
        android:label="@string/second_fragment_label"
        tools:layout="@layout/scavenger_hunt_fragment_2">

        <action
            android:id="@+id/action_SecondFragment_to_FirstFragment"
            app:destination="@id/FirstFragment" />
    </fragment>
</navigation>